{
  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "noUnusedLocals": true,
    "downlevelIteration": true,
    "listFiles": true
  },
  "exclude": ["node_modules", "./**/site-search.json"]
}
